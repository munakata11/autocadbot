{
  "name": "autocadassistant",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "kill:win": "taskkill /F /IM electron.exe /T || exit 0 && taskkill /F /IM node.exe /T || exit 0",
    "next-dev": "next dev -p 3000",
    "electron-dev": "electron .",
    "dev": "npm run kill:win && concurrently \"npm run next-dev\" \"wait-on tcp:3000 && npm run electron-dev\"",
    "clean": "rimraf .next out dist",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "package": "npm run clean && npm run build && electron-builder build --win --publish never --config electron-builder.json"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tauri-apps/api": "^2.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.18.2",
    "serve-static": "^1.15.0",
    "groq-sdk": "^0.9.1",
    "lucide-react": "^0.469.0",
    "next": "14.2.16",
    "openai": "^4.77.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "http-server": "^14.1.1",
    "tcp-port-used": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "14.2.16",
    "postcss": "^8",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.autocadassistant.app",
    "productName": "AutoCAD Assistant",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "icon": "public/images/icon/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/images/icon/icon.ico",
      "uninstallerIcon": "public/images/icon/icon.ico"
    }
  }
}
